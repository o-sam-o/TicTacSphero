<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tictac.sphero"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".SetupActivity"
            android:label="@string/title_activity_game"
            android:launchMode="singleTask" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GameActivity"
            android:label="@string/title_activity_game"
            android:launchMode="singleTask" >
        </activity>
        <activity
            android:name="orbotix.robot.app.StartupActivity"
            android:launchMode="singleTop"
            android:theme="@android:style/Theme.Translucent" />

        <!-- Connecting to Sphero -->
        <activity
            android:name="orbotix.robot.app.MultipleRobotStartupActivity"
            android:configChanges="screenLayout|keyboard|keyboardHidden"
            android:screenOrientation="portrait" />
    </application>

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

</manifest>